{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      },
      {
        "src": "static/scripts/**",
        "use": "@vercel/static"
      },
      {
        "src": "static/styles/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/scripts/(.*)",
        "dest": "/static/scripts/$1"
      },
      {
        "src": "/static/styles/(.*)",
        "dest": "/static/styles/$1"
      },
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ],
    "env": {
      "FLASK_ENV": "production",
      "FLASK_APP": "app.py"
    }
}
  